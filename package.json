    "style-loader": "^0.23.1",
    "text-replace-html-webpack-plugin": "^1.0.3",
    "ts-loader": "^5.3.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "tscpaths": "0.0.9",
    "typescript": "^4.9.5",

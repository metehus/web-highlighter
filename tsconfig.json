{
    "compilerOptions": {
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015"
        ],
        "target": "ESNext",
        "resolveJsonModule": true,
        "moduleResolution": "nodenext",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}